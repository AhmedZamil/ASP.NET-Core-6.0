@model RegisterViewModel

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<h3>@ViewBag.SignedInUserMessage</h3>

    <div class="col-md-6 col-md-offset-6">
        <form asp-action="Register" method="post" role="form">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="label-control"></label>
                <input asp-for="FirstName" type="text" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="LastName" class="label-control"></label>
                <input asp-for="LastName" type="text" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="UserName" class="label-control"></label>
                <input asp-for="UserName" type="text" class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="Email" class="label-control"></label>
                <input asp-for="Email" type="text" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="Password" class="label-control"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>

            @*            <div class="form-group">
        <div class="form-check">
        <input asp-for="RemeberMe" type="checkbox" class="form-check-input" />
        <label asp-for="RemeberMe" class="form-check-label"></label>
        </div>
        </div>*@

            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RemeberMe" />
                    <label class="form-check-label" asp-for="RemeberMe"></label>
                </div>
                <span asp-validation-for="RemeberMe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-6 col-md-offset-6">
                    <input type="submit" class="btn btn-primary" value="Register" />
                </div>
            </div>
        </form>

    </div>
